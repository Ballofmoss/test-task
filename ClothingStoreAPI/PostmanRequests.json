{
  "info": {
    "name": "Clothing Store API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"passwordHash\": \"password123\",\n  \"role\": 0\n}"
            },
            "url": "http://localhost:5273/api/Auth/register",
            "description": "Регистрация нового пользователя. PasswordHash передается как пароль в открытом виде (хэшируется на сервере)"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": "http://localhost:5273/api/Auth/login",
            "description": "Авторизация пользователя. Сохраните токен в переменные окружения для последующих запросов"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.token) {",
                  "    pm.environment.set('auth_token', response.token);",
                  "    pm.environment.set('current_user_id', response.user.id);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": "http://localhost:5273/api/Auth/user/{{current_user_id}}",
            "description": "Получение информации о пользователе по ID"
          },
          "response": []
        }
      ]
    },
